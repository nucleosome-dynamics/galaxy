<tool id="periodicity_stats" name="periodicity Statistics" version="0.1">
  <requirements>
    <container type="docker">mmbirb/nucldyn</container>
  </requirements>
  <description>Gather gene and genome-wide statistics on periodicity</description>
  <command>
    docker run -v /gpfs/database/files:/data_dir -u 1000  mmbirb/nucldyn galaxy periodicity_stats --input $gff_file --out_genes $output_genes_csv_file --out_gw $output_gw_csv_file --genome $ref_genome_gff_file > $log_file 
  </command>
  <inputs>
    <param name="gff_file" type="data" format="gff" label="Input Nucleosome Calls"/>
    <param name="ref_genome_gff_file" type="data" format="gff" label="Reference genes (GFF)"/>
</inputs>
  <outputs>
    <data format="csv" name="output_genes_csv_file" label="${gff_file.name}.P_stats.genes.csv"/>
    <data format="csv" name="output_gw_csv_file" label="${gff_file.name}.P_stats.gw.csv"/>
    <data format="txt" name="log_file" label="${gff_file.name}.P_stats.log"/>
  </outputs>
</tool>
