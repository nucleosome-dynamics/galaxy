<tool id="readBAM" name="readBAM" version="0.1">
  <requirements>
  <requirement type="binary">docker</requirement>
  </requirements>
  <description>: convert aligned BAM files to RData format for NucleosomeDynamics</description>
  <command>
	  docker run -v $__root_dir__/database/files:/data_dir -u `id -u`:`id -g`  mmbirb/nucldyn:proba galaxy readBAM --input $bam_file --output $rdata_file --type $seq_type
  </command>
  <inputs>
    <param name="bam_file" type="data" format="bam" label="BAM File to convert"/>
    <param name="seq_type" type="select" label="Type of sequence reads">
      <option value="single">Single</option>
      <option value="paired">Paired</option>
    </param>
  </inputs>
  <outputs>
    <data format="rdata" name="rdata_file" label="readBAM_${os.path.splitext(os.path.basename($bam_file.name))[0]}.rdata" />
  </outputs>
</tool>
