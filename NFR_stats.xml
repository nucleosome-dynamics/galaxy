<tool id="NFR_stats" name="Nucleosome Free Regions Statistics" version="0.1">
    <requirements>
        <requirement type="binary">docker</requirement>
    </requirements>
<description>: gather gene and genome-wide statistics on Nucleosome Free Regions</description>
  <command>
    docker run -v $__root_dir__/database/files:/data_dir -v /galaxy-central/database/files:/public_dir -u `id -u`:`id -g`  mmbirb/nucldyn:galaxy galaxy NFR_stats --input $gff_file --out_gw $output_gw_csv_file --genome $ref_genome_gff_file 2>&amp;1 
  </command>
  <inputs>
    <param name="gff_file" type="data" format="gff" label="Input Nucleosome Calls"/>
    <param name="ref_genome_gff_file" type="data" format="gff" label="Reference genes (GFF)"/>
</inputs>
  <outputs>
    <data format="csv" name="output_gw_csv_file" label="NFR_stats_${os.path.splitext(os.path.basename($gff_file.name))[0]}.gw.csv" />
  </outputs>
</tool>
