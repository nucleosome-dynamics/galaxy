<tool id="stiffness" name="stiffness" version="0.1">
  <requirements>
    <container type="docker">mmbirb/nucldyn</container>
  </requirements>
  <description>Analyze stiffness of nucleosome positioning</description>
  <command>
    docker run -v /gpfs/database/files:/data_dir -u 1000  mmbirb/nucldyn galaxy stiffness --calls $gff_file --reads $rdata_file --output $output_gff_file --range $range > $log_file 
  </command>
  <inputs>
    <param name="gff_file" type="data" format="gff" label="Nucleosome calls"/>
    <param name="rdata_file" type="data" format="rdata" label="Sequence reads (RData)"/>
    <param name="range" size="4" type="text" value="All" label="Range" />  
</inputs>
  <outputs>
    <data format="gff" name="output_gff_file" label="${gff_file.name}.STF.gff"/>
    <data format="txt" name="log_file" label="${gff_file.name}.STF.log"/>
  </outputs>
</tool>
